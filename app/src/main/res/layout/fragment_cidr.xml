<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >

    <RelativeLayout
        android:background="#fff0f0f0"
        android:gravity="center_horizontal"
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_view_exercise_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:textColor="#424242"
                android:textSize="20sp"
                android:textStyle="italic"
                android:text="Calcula el sufijo CIDR para esta máscara"/>

            <LinearLayout
                android:id="@+id/LinearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:background="#FFFFFF"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:id="@+id/text_view_question"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="10dp"
                    android:textColor="#ff979797"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/text_view_answer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:ems="10"
                    android:gravity="center"
                    android:imeOptions="actionDone"
                    android:inputType="phone"
                    android:padding="10dp"
                    android:textSize="20sp"
                    android:backgroundTint="#EC7904">

                    <requestFocus />
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/button_check_answer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#ff979797"
                    android:textColor="#000000"
                    android:text="Comprobar" />

                <Button
                    android:id="@+id/button_show_solution"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#ff979797"
                    android:textColor="#000000"
                    android:text="Solución" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/keyboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/LinearLayout1"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center"
            android:layout_marginStart="66dp"
            android:layout_marginLeft="66dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:paddingTop="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/b7"
                    android:layout_width="48sp"
                    android:layout_height="48sp"
                    android:backgroundTint="#1A2A8B"
                    android:fontFamily="sans-serif"
                    android:text="7"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/b8"
                    android:layout_width="48sp"
                    android:layout_height="48sp"
                    android:backgroundTint="#1A2A8B"
                    android:fontFamily="sans-serif"
                    android:text="8"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/b9"
                    android:layout_width="48sp"
                    android:layout_height="48sp"
                    android:backgroundTint="#1A2A8B"
                    android:fontFamily="sans-serif"
                    android:text="9"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="48sp"
                    android:layout_height="48sp"
                    android:backgroundTint="#F88700"
                    android:fontFamily="sans-serif"
                    android:text="E"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="48sp"
                    android:layout_height="48sp"
                    android:backgroundTint="#F88700"
                    android:fontFamily="sans-serif"
                    android:text="F"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/b4"
                    android:layout_width="48sp"
                    android:layout_height="48sp"
                    android:backgroundTint="#1A2A8B"
                    android:fontFamily="sans-serif"
                    android:text="4"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/b5"
                    android:layout_width="48sp"
                    android:layout_height="48sp"
                    android:backgroundTint="#1A2A8B"
                    android:fontFamily="sans-serif"
                    android:text="5"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/b6"
                    android:layout_width="48sp"
                    android:layout_height="48sp"
                    android:backgroundTint="#1A2A8B"
                    android:fontFamily="sans-serif"
                    android:text="6"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="48sp"
                    android:layout_height="48sp"
                    android:backgroundTint="#F88700"
                    android:fontFamily="sans-serif"
                    android:text="C"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="48sp"
                    android:layout_height="48sp"
                    android:backgroundTint="#F88700"
                    android:fontFamily="sans-serif"
                    android:text="D"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/b1"
                    android:layout_width="48sp"
                    android:layout_height="48sp"
                    android:backgroundTint="#1A2A8B"
                    android:fontFamily="sans-serif"
                    android:text="1"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/b2"
                    android:layout_width="48sp"
                    android:layout_height="48sp"
                    android:backgroundTint="#1A2A8B"
                    android:fontFamily="sans-serif"
                    android:text="2"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/b3"
                    android:layout_width="48sp"
                    android:layout_height="48sp"
                    android:backgroundTint="#1A2A8B"
                    android:fontFamily="sans-serif"
                    android:text="3"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="48sp"
                    android:layout_height="48sp"
                    android:backgroundTint="#F88700"
                    android:fontFamily="sans-serif"
                    android:text="A"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="48sp"
                    android:layout_height="48sp"
                    android:backgroundTint="#F88700"
                    android:fontFamily="sans-serif"
                    android:text="B"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/b0"
                    android:layout_width="48sp"
                    android:layout_height="48sp"
                    android:backgroundTint="#1A2A8B"
                    android:fontFamily="sans-serif"
                    android:text="0"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <!-- Placeholder for skipping one column -->
                <Button
                    android:layout_width="48sp"
                    android:layout_height="48sp"
                    android:backgroundTint="#F88700"
                    android:fontFamily="sans-serif"
                    android:text="P"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:visibility="invisible" />

                <Button
                    android:layout_width="48sp"
                    android:layout_height="48sp"
                    android:backgroundTint="#0A9B23"
                    android:fontFamily="sans-serif"
                    android:text="-"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="48sp"
                    android:layout_height="48sp"
                    android:backgroundTint="#0A9B23"
                    android:fontFamily="sans-serif"
                    android:text="."
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/key_delete"
                    android:layout_width="48sp"
                    android:layout_height="48sp"
                    android:backgroundTint="#0A9B23"
                    android:fontFamily="sans-serif"
                    android:text="D"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</ScrollView>
